package gts;

public class Q55_PairOfDistinct 
{public static List<List<Integer>> findZeroSumPairs(int[] arr){
	Set<Integer> seen = new HashSet<>();       // Stores numbers seen so far
    Set<String> uniquePairs = new HashSet<>(); // Keeps track of already added pairs
    List<List<Integer>> result = new ArrayList<>(); // Final result list
    
    for(int num : arr) {
    	int opposite = - num;
    	
    	if(seen.contains(opposite)) {
    		int a = Math.min(num, opposite);
    		int b = Math.max(num, opposite);
    		String key = a + " : " + b;
    		
    		if (uniquePairs.add(key)) {
                result.add(Arrays.asList(a, b));
            }
    	}
    	seen.add(num);
    }
    return result;
}
public static void main(String[] args) {
    int[] input = {1, 2, 3, 5, -5};
    List<List<Integer>> pairs = findZeroSumPairs(input);

    System.out.println("Pairs with sum zero:");
    for (List<Integer> pair : pairs) {
        System.out.println(pair);
    }
}


}
