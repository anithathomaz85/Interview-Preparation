package gts;

import java.util.Arrays;

/**
 * Find triplets from the given array equals to the given sum? 
	{ -2, 1, 2, 4, 5 }
 * 
 * */
public class E_TripletSumFinder {
	
	public static void main(String[] args) {
		attemp1();
	}

	private static void attemp1() {
		int[] arr = {-2, 1, 2, 4, 5};
        int targetSum = 7;
        Arrays.sort(arr); 
        int n = arr.length;
        boolean found = false;

        for (int i = 0; i < n - 2; i++) {
            int left = i + 1, right = n - 1;

            while (left < right) {
                int sum = arr[i] + arr[left] + arr[right];

                if (sum == targetSum) {
                    System.out.println("Triplet: " + arr[i] + ", " + arr[left] + ", " + arr[right]);
                    found = true;
                    left++;
                    right--; // Move both pointers to find more triplets
                } else if (sum < targetSum) {
                    left++;  // Increase the sum by moving left
                } else {
                    right--; // Decrease the sum by moving right
                }
            }
        }
	}
}
