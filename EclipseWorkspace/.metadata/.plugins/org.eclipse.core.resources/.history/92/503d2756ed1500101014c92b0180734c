package gts.Q70;
import java.io.IOException;
import javax.servlet.*;
import javax.servlet.annotation.WebFilter;

@WebFilter("/*") // This filter applies to all requests
public class LoggingFilter implements Filter {

    // Called only once when the filter is first created
    @Override
    public void init(FilterConfig filterConfig) throws ServletException {
        System.out.println("LoggingFilter initialized");
    }

    // Called for every request
    @Override
    public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain)
            throws IOException, ServletException {

        System.out.println("Request received at: " + new java.util.Date());

        // Pass the request to the next filter or servlet
        chain.doFilter(request, response);

        System.out.println("Response leaving at: " + new java.util.Date());
    }

    // Called only once when the filter is being destroyed
    @Override
    public void destroy() {
        System.out.println("LoggingFilter destroyed");
    }
}