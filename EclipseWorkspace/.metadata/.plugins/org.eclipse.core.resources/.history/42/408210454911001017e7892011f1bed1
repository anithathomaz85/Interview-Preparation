package gts;

import java.util.Stack;

class C_NextGreaterElement {
	
	public static void main(String[] args) {
		
		attempt1();
	}

	private static void attempt1() {

		
		int[] nums = {1,3,4,1,2};
		int[] nextGreaterElements = new int[nums.length];
		Stack<Integer> helpingStack=new Stack();
		
		for(int i=nums.length-1;i>=0;i--) {
			
			int element = nums[i];
			
			if(helpingStack.isEmpty()) {
				helpingStack.push(element);
				nextGreaterElements[i]=-1;
				continue;
			}
			
			
			if(helpingStack.peek()>element) {
				nextGreaterElements[i]=helpingStack.peek();
				helpingStack.push(element);
				continue;
			}
			
			while(helpingStack.peek()<=element && !helpingStack.isEmpty()) {
				helpingStack.pop();
			}
			
			if(helpingStack.isEmpty()) {
				nextGreaterElements[i]=-1;
			}
			else {
				nextGreaterElements[i] = helpingStack.peek();
			}
			
			helpingStack.push(element);
		}	
		
	}
}


